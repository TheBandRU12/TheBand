            <arg value="+xxx"/>
            <arg value="${deploy.dir}/${game.name}.sh"/>
        </exec>
    </target>

    <target name="execute">
        <exec osfamily="unix" dir="${deploy.dir}" executable="${deploy.dir}/${game.name}.sh"/>
